#i[i]nclude<stdio.h>
#include<string.h>
void main()
{
 int i,a,b,c;
 char p[]="1+2+2+1+2+5+4-1-3+4-8";
 a=p[0]-'0';
 for{i=1;i<strlen(p);i++)
 {
  if(p[i]=='+')
  {
   b=p[i+1]-'0';
   a=a+b;
   i++;
   }
   else if(p[i]=='-')
   {
    c=p[i+1]-'0';
    a=a-c;
    i++;
    }
  }
  printf("a=%d",a);
  }
