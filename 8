#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main()
{
    //定义字符串1
    char *src="hello llo llo llo world";
    //定义字符串2
    char *dist= "llo";
    int count = 0; 
    char *ret = strstr(src, dist);
   
	while (ret != NULL)//使用while判断返回值是否为NULL
    {
        count += 1;
        //每判断一次截断一个字符串2
        ret += strlen(dist);
        //再次调用strstr函数判断
        ret = strstr(ret, dist);
    }
    //打印出现的次数
    printf("%d\n", count);
    return 0;
}
